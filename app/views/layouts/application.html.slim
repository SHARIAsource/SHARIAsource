doctype html
html
  head
    meta charset='utf-8'
    title== head_title yield(:page_title)
    meta name='robots' content='noindex, nofollow'
    = render 'shared/hotfix'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'vendor/modernizr', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield(:head)
    = render 'shared/google_analytics'
    = csrf_meta_tags
    = auto_discovery_link_tag :rss, documents_url

  body
    .container
      = render 'admin/admin_nav' if user_signed_in?
      = render 'shared/site_nav'
      = render 'shared/banner'
      == yield
      = render 'shared/footer'
      = render 'shared/preloader'
